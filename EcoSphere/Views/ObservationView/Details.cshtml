@model EcoSphere.Models.VwObservation

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Observation Details</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .main-observation-image {
            max-width: 100%;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="observation-card">
                    <div class="card-header">
                        <h2><i class="fas fa-eye me-2"></i>Gözlem Detayları</h2>
                    </div>

                    <div class="row g-0">
                        <!-- Sol Taraf - Tüm Bilgiler -->
                        <div class="col-lg-4 col-md-5">
                            <div class="detail-section">
                                <h5 class="mb-3 texthead"><i class="fas fa-user me-2"></i>Kullanıcı Bilgileri</h5>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Kayıt Eden Kullanıcının Adı</div>
                                        <div class="detail-value">@Model.Username</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Referans'ın Adı</div>
                                        <div class="detail-value">@Model.ReferenceName</div>
                                    </div>
                                </div>

                                <h5 class="mb-3 mt-4 texthead"><i class="fas fa-paw me-2"></i>Canlı Bilgileri</h5>

                                @{
                                    string endemicClass = "";
                                    string endemicText = "";

                                    if (!string.IsNullOrEmpty(Model.EndemicStatus))
                                    {
                                        if (Model.EndemicStatus.Equals("true", System.StringComparison.OrdinalIgnoreCase))
                                        {
                                            endemicClass = "bg-danger text-white";
                                            endemicText = "Endemik bir türdür";
                                        }
                                        else if (Model.EndemicStatus.Equals("false", System.StringComparison.OrdinalIgnoreCase))
                                        {
                                            endemicClass = "bg-success text-white";
                                            endemicText = "Endemik değildir";
                                        }
                                        else
                                        {
                                            endemicClass = "bg-secondary text-white";
                                            endemicText = "Bilinmiyor";
                                        }
                                    }
                                    else
                                    {
                                        endemicClass = "bg-secondary text-white";
                                        endemicText = "Bilinmiyor";
                                    }
                                }

                                <div class="detail-item">
                                    <div class="detail-content">
                                        <div class="detail-value p-2 rounded @endemicClass">@endemicText</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Bilimsel Adı</div>
                                        <div class="detail-value">@Model.ScientificName</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Cinsiyet</div>
                                        <div class="detail-value">@Model.GenderName</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Bölge</div>
                                        <div class="detail-value">@Model.ProvinceName/@Model.DistrictName</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Konum Bilgileri</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Long</div>
                                        <div class="detail-value">@Model.Long</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Lat</div>
                                        <div class="detail-value">@Model.Lat</div>
                                    </div>
                                </div>

                                <div class="detail-item compact">
                                    <div class="detail-content">
                                        <div class="detail-label">Görülme Zamanı</div>
                                        <div class="detail-value">@Model.SeenTime?.ToString("dd.MM.yyyy HH:mm")</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sağ Taraf - Büyük Fotoğraf Alanı -->
                        <div class="col-lg-8 col-md-7">
                            <div class="photo-section">
                                <h5 class="mb-3 texthead"><i class="fas fa-camera me-2"></i>Gözlem Fotoğrafı</h5>
                                <div class="main-image-container">
                                    <img src="@Url.Content("~/uploads/" + (string.IsNullOrEmpty(Model.ImagePath) ? "noimagefound.png" : Model.ImagePath))"
                                         alt="Gözlem Fotoğrafı"
                                         class="main-observation-image"
                                         onclick="openImageModal(this.src)">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center pb-4">
                        <a href="@Url.Action("Explore", "Home")" class="back-btn">
                            <i class="fas fa-arrow-left"></i> Haritaya Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <button type="button" class="close-btn" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i>
                </button>
                <div class="modal-body">
                    <img id="modalImage" src="" class="modal-image">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function openImageModal(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
            new bootstrap.Modal(document.getElementById('imageModal')).show();
        }

        document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape') {
                const modal = bootstrap.Modal.getInstance(document.getElementById('imageModal'));
                if (modal) {
                    modal.hide();
                }
            }
        });
    </script>
</body>
</html>