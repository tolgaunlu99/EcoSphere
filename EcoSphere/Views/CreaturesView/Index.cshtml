@model List<EcoSphere.Models.CreaturesViewModel>
@{
    ViewData["Title"] = "Creatures Details";
}


<div class="container obs-container mt-4">
    <h3>@ViewData["Title"]</h3>
    <hr />

    <a href="/CreaturesView/AddCreature" class="btn btn-create mb-3">Add Creature</a>

    <div class="table-responsive">
        <table id="creaturesTable" class="table table-striped table-bordered" cellspacing="0">
            <thead class="table-active">
                <tr>
                    <th>Upper Realm</th>
                    <th>Kingdom</th>
                    <th>Phylum</th>
                    <th>Class</th>
                    <th>Order</th>
                    <th>Family</th>
                    <th>Genus</th>
                    <th>Species</th>
                    <th>Sub Species</th>
                    <th>IUCN</th>
                    <th>Author</th>
                    <th>Scientific Name</th>
                    <th>Common Name</th>
                    <th class="noExport" style="text-align:center; width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var creature in Model)
                    {
                        <tr>
                            <td>@creature.UpperRealmName</td>
                            <td>@creature.KingdomName</td>
                            <td>@creature.PhylumName</td>
                            <td>@creature.ClassName</td>
                            <td>@creature.OrderName</td>
                            <td>@creature.FamilyName</td>
                            <td>@creature.GenusName</td>
                            <td>@creature.SpeciesName</td>
                            <td>@creature.SubspeciesName</td>
                            <td>@creature.IucnCode</td>
                            <td>@creature.AuthorName</td>
                            <td>@creature.ScientificName</td>
                            <td>@creature.CommonName</td>
                            <td style="text-align:center;">
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Creatures" asp-action="Edit" asp-route-id="@creature.CreatureId" class="btn btn-primary">Edit</a>
                                    <a asp-controller="Creatures" asp-action="Delete" asp-route-id="@creature.CreatureId" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="14">
                            <div class="text-center py-2">No Creatures Available</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.3.6/js/buttons.colVis.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#creaturesTable').DataTable({
                language: { lengthMenu: 'Show _MENU_' },
                dom: '<"table-header d-flex justify-content-between mb-3"<"dt-buttons btn-group"B><"table-controls d-flex align-items-center"<"me-2"l><"table-search"f>>>rtip',
                scrollX: true,
                paging: true,
                autoWidth: false,
                columnDefs: [{ orderable: false, targets: -1 }],
                buttons: [
                    {
                        extend: 'colvis',
                        text: 'Columns',
                        collectionLayout: 'fixed two-column'
                    },
                    {
                        extend: 'csvHtml5',
                        exportOptions: { columns: ':not(.noExport)' },
                        action: function (e, dt, button, config) {
                            logExport('csv');
                            $.fn.dataTable.ext.buttons.csvHtml5.action.call(this, e, dt, button, config);
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        exportOptions: { columns: ':not(.noExport)' },
                        action: function (e, dt, button, config) {
                            logExport('excel');
                            $.fn.dataTable.ext.buttons.excelHtml5.action.call(this, e, dt, button, config);
                        }
                    }
                ]
            });

            function logExport(type) {
                $.ajax({
                    url: '/CreaturesView/LogUserExport',
                    type: 'POST',
                    data: { exportType: type, sourceTable: 'Creatures' },
                    success: function (res) {
                        if (!res.success) {
                            console.error("Export log kaydedilirken hata:", res.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Export log kaydedilirken hata:", error);
                    }
                });
            }
        });
    </script>
}