@model EcoSphere.Models.DashboardViewModel
@{
    ViewData["Title"] = "Explore Page";
}


<div class="container-fluid">
    <div class="card main-card">
        <div class="card-header">
            <div class="row align-items-center">
                <!-- Sol: Tür Bilgileri -->
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-label">TOPLAM TÜR</div>
                        <div class="stats-number">
                            <span id="totalCreatures">@Model.TotalCreatures</span>
                        </div>
                        <div class="stats-breakdown">
                            <div class="breakdown-item">
                               🟣 Bitki: <span id="plantCount">@Model.TotalPlants</span>
                            </div>
                            <div class="breakdown-item">
                               🔴 Hayvan: <span id="animalCount">@Model.TotalAnimals</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Orta: Başlık -->
                <div class="col-md-6 text-center">
                    <h1 class="main-title">Gözlem Haritası</h1>
                    <div class="title-underline"></div>
                </div>
                <!-- Sağ: Toplam Observations -->
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-label">TOPLAM GÖZLEM</div>
                        <div class="stats-number">
                            <span id="observationCount">@Model.TotalObservations</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Map Container -->
        <div id="map" style="width: 100%; height: 700px; position: relative;"></div>
    </div>
</div>
<!-- Popup -->
<div id="popup" class="ol-popup" style="display: none;">
    <div id="popup-content"></div>
</div>

<script>
    setTimeout(function () {
        const successAlert = document.getElementById("success-alert");
        const errorAlert = document.getElementById("error-alert");
        if (successAlert) {
            successAlert.style.transition = "opacity 0.5s ease";
            successAlert.style.opacity = 0;
            setTimeout(() => successAlert.remove(), 500);
        }
        if (errorAlert) {
            errorAlert.style.transition = "opacity 0.5s ease";
            errorAlert.style.opacity = 0;
            setTimeout(() => errorAlert.remove(), 500);
        }
    }, 3000);

    // Legend toggle functionality (optional)
    document.addEventListener('DOMContentLoaded', function() {
        const legendBox = document.querySelector('.map-legend-box');
        // Uncomment the line below if you want to show the legend
        // legendBox.style.display = 'block';
    });
</script>