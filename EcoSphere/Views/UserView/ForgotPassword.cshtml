@{
    ViewBag.Title = "Şifremi Unuttum";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="icon-wrapper">
                @if (ViewBag.EmailConfirmed == null)
                {
                    <i class="fas fa-key"></i>
                }
                else
                {
                    <i class="fas fa-shield-alt"></i>
                }
            </div>

            @if (ViewBag.EmailConfirmed == null)
            {
                <div class="step-indicator">
                    <div class="step active">1</div>
                    <div class="step inactive">2</div>
                    <div class="step inactive">3</div>
                </div>

                <h3>Forgot my password</h3>
                <p>Enter your email address and we will send you a password reset code</p>
            }
            else
            {
                <div class="step-indicator">
                    <div class="step active">1</div>
                    <div class="step active">2</div>
                    <div class="step inactive">3</div>
                </div>

                <h3>Verification Code</h3>
                <p>Enter the 6-digit code sent to your email address</p>
            }
        </div>

        

        <form method="post">
            @if (ViewBag.EmailConfirmed == null)
            {
                <div class="form-group">
                    <label for="email">
                        <i class="fas fa-envelope"></i> Email Address
                    </label>
                    <input type="email" name="email" id="email" class="form-control"
                           placeholder="example@email.com" required />
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Send Code
                    </button>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label for="otp">
                        <i class="fas fa-lock"></i> Verification Code
                    </label>
                    <input type="text" name="otp" id="otp" class="form-control"
                           placeholder="6-digit code" maxlength="6" required />
                </div>
                <div class="form-actions">
                    <button formaction="/UserView/VerifyOtp" formmethod="post" class="btn btn-success">
                        <i class="fas fa-check"></i> Verify Code
                    </button>
                </div>
            }

            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>

<script>
    // OTP input sadece rakam kabul etsin
    document.addEventListener('DOMContentLoaded', function() {
        const otpInput = document.getElementById('otp');
        if (otpInput) {
            otpInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        }
    });
</script>