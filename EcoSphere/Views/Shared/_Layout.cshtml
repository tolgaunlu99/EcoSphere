<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoSphere</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoSphere.styles.css" asp-append-version="true" />

    <script type="text/javascript" src="~/js/mapdata.js"></script>
    <script type="text/javascript" src="~/js/countrymap.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo ve Marka İsmi (Sola Hizalı) -->
                <div class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://dkm.org.tr/sites/other/dkm/assets//images/logo.png" alt="EcoSphere Logo" width="97" height="50.5" class="me-2">
                    <span> EcoSphere</span>
                </div>

                <!-- Orta Menü -->
                <div class="d-none d-lg-flex flex-grow-1 justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (Context.Session.GetInt32("UserID") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="ObservationView" asp-action="Index">Observation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="CreaturesView" asp-action="Index">Creatures</a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Sign In & Sign Out -->
                <div class="d-flex">
                    @if (Context.Session.GetInt32("UserID") == null)
                    {
                        <a class="btn btn-outline-dark btn-sm me-2" asp-controller="UserView" asp-action="SignIN">Sign In</a>
                        <a class="btn btn-dark btn-sm" asp-controller="UserView" asp-action="SignUP">Sign Up</a>
                    }
                    else
                    {
                        <form method="post" asp-controller="UserView" asp-action="Logout">
                            <button type="submit" class="btn btn-danger btn-sm">Logout</button>
                        </form>
                    }
                </div>

             </div>
         </nav>
        

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-dark">
        <div class="container">
            &copy; 2025 - EcoSphere - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> <a href="https://www.instagram.com/deniiz.coskun/">Deniz Coşkun</a> <a href="https://www.instagram.com/badyyik/">Yiğit Badik</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
